
all: ..\iemgui.dll

VIS_CPP_PATH = "C:\Programme\Microsoft Visual Studio\Vc98"

PD_INST_PATH = "C:\Programme\pd"

PD_WIN_INCLUDE_PATH = /I. /I$(PD_INST_PATH)\src /I$(VIS_CPP_PATH)\include

PD_WIN_C_FLAGS = /nologo /W3 /WX /DMSW /DNT /DPD /DWIN32 /DHAVE_G_CANVAS_H /DWINDOWS /Ox -DPA_LITTLE_ENDIAN

PD_WIN_L_FLAGS = /nologo

PD_WIN_LIB = /NODEFAULTLIB:libc /NODEFAULTLIB:oldnames /NODEFAULTLIB:kernel /NODEFAULTLIB:uuid \
	$(VIS_CPP_PATH)\lib\libc.lib \
	$(VIS_CPP_PATH)\lib\oldnames.lib \
	$(VIS_CPP_PATH)\lib\kernel32.lib \
	$(VIS_CPP_PATH)\lib\wsock32.lib \
	$(VIS_CPP_PATH)\lib\winmm.lib \
	$(PD_INST_PATH)\bin\pthreadVC.lib \
	$(PD_INST_PATH)\bin\pd.lib


SRC =	room_sim_2d.c \
	room_sim_3d.c \
	cube_sphere.c \
	sym_dial.c \
	iem_image.c \
	iem_vu.c \
	hfadl_scale.c \
	hfadr_scale.c \
	vfad_scale.c \
	numberbox_matrix.c \
	iem_event.c \
	iemgui.c


OBJ = $(SRC:.c=.obj)

.c.obj:
	cl $(PD_WIN_C_FLAGS) $(PD_WIN_INCLUDE_PATH) /c $*.c

..\iemgui.dll: $(OBJ)
	link $(PD_WIN_L_FLAGS) /dll /export:iemgui_setup \
	/out:..\iemgui.dll $(OBJ) $(PD_WIN_LIB)

clean:
	del *.obj
