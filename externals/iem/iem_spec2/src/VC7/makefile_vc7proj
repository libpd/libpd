	spec2_add_scalar~.c \
	spec2_add~.c \
	spec2_block_delay~.c \
	spec2_clip_max~.c \
	spec2_clip_min~.c \
	spec2_dbtopow~.c \
	spec2_dbtorms~.c \
	spec2_matrix_bundle_stat~.c \
	spec2_mul_scalar~.c \
	spec2_mul~.c \
  	spec2_powtodb~.c \
	spec2_rmstodb~.c \
	spec2_shift~.c \
	spec2_sqrt~.c \
	spec2_stretch~.c \
	spec2_sub~.c \
	spec2_sum~.c \
